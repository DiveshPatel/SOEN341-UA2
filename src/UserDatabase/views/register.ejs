<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-address-card"></i> Create an Account
            </h1>
            <%include ./partials/messages %>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input
                            type="text"
                            id="first_name"
                            name="first_name"
                            class="form-control"
                            placeholder="Enter First Name"
                            value="<%= typeof first_name != 'undefined' ? first_name : '' %>"
                    />
                    <input
                            type="text"
                            id="last_name"
                            name="last_name"
                            class="form-control"
                            placeholder="Enter Last Name"
                            value="<%= typeof last_name != 'undefined' ? last_name : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Create Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input
                            type="password"
                            id="password2"
                            name="password2"
                            class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="Profile">Profile</label>
                    <input
                            type="text"
                            id="location"
                            name="location"
                            class="form-control"
                            placeholder="Location"
                            value="<%= typeof location != 'undefined' ? location : '' %>"
                    />
                    <input
                            type="text"
                            id="description"
                            name="description"
                            class="form-control"
                            placeholder="Description"
                            value="<%= typeof description != 'undefined' ? description : '' %>"
                    />
                    <input
                            type="text"
                            id="interests"
                            name="interests"
                            class="form-control"
                            placeholder="Interests"
                            value="<%= typeof interests != 'undefined' ? interests : '' %>"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Register
                </button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        </div>
    </div>
</div>