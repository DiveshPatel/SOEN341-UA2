<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Landing Page</title>
  </head>
  <!--  include another view file (partial) inside a .ejs view file -->
  <%- include header.ejs %>

  <body class="landing_body">
      <h1 id="landing_header">RETTIWT</h1>
      <div id="sign_up_div">
       <!-- Signup Form -->
        <form id="sign_up_form" action="index.html" method="post">
          <h2>Sign Up</h2>
          <input type="text" id="name" name="name" placeholder="Name">
          <input type="text" id="email" name="email" placeholder="Email Addres">
          <input type="password" id="password" name="password" placeholder="password">
          <input type="button" id="register_user" value="Register">
        </form>
      </div>

      <!-- Signin Form -->
      <div id="sign_in_div">
        <form id="sign_up_form" action="index.html" method="post">
          <h2>Sign In</h2>
          <input type="text" id="usr_email" name="email" placeholder="Email Addres">
          <input type="text" id="usr_password" name="password" placeholder="password">
          <input type="button" id="sign_in_user" value="Sign In">
        </form>
      </div>

  </body>
</html>
