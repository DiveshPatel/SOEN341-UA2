<!--  include another view file (partial) inside a .ejs view file -->
<head>
     <script src="/js/tweet_ajax.js"></script>
</head>
<div>
    <h1 class="mt-4"><%= first_name + " " + last_name %>'s Profile</h1>
    <h4 class="mt-2">Location: <%= location %></h4>
    <h4 class="mt-2">Description: <%= description %></h4>
    <h4 class="mt-2">Interests: <%= interests %></h4>

    <div class = "card-body" id="user-profile">
    </div>
    <div class = "card-body" id="tweet-table-1">
        <h1 class = "lead mb-3"> Tweets </h1>
        <form>
            <input class = "form-group" type="text" name="item" placeholder="Write comment" required />
            <button type="submit" id="#test">Tweet</button>
        </form>
        <div>   
             <ul class="list-group">
                <% for(var i = tweets.length-1; i >= 0; i--) { %>
                    <div>
                        <%= first_name + " " + last_name %>&nbsp;&nbsp;&nbsp;&nbsp;
                     <!-- <%= tweetId= tweets[i]._id%> -->
                        <li class="list-group-item">
                        <%= tweets[i].tweet %>
                        </li>
                        <small style="color:darkblue"><%= tweets[i]._id.getTimestamp(); %></small>
                        <p id="counter"></p>
                        <button id="myButton">Like</button>
                    </div>
                <br />
                <% } %>
                </ul>
            </div>

            <script src="/js/client.js"></script>
        </div>  
    </div>

</div>
